<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error| %>
       <%= js add_gritter(error, title: "Zack Weiners Awesomeness", sticky: false) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body, class:'form-control', rows: 20 %>
  </div>

  <div class="form-group">
    <%= form.label :topic %>
    <%= form.collection_select :topic_id, Topic.order(:title),:id,:title, include_blank: false %>
  </div>
  <div class="actions">
    <%= form.submit "Save", class: 'btn btn-primary' %>
  </div>
<% end %>
