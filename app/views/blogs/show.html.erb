<div class="col-sm-8 blog-main">
  
  <h2><%= @blog.title %></h2>
  <span class="blog-topic"> <%= @blog.topic.title if @blog.topic %> </span> <br>
  <%= link_to 'Edit', edit_blog_path(@blog) %> | <%= link_to 'Back', blogs_path %>
  <p><%= markdown @blog.body %></p>

  <!-- Start of Comment Form -->
  <%= render 'comments/comment_form'%>
  <!-- End of Comment Form -->

  <!-- Start of Comments -->
  <div id='comments' data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
  <!-- End of Comments -->
</div>




