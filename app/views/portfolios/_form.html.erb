<%= form_for(@portfolio_item) do |form| %>
<div class='row'>
  <div class='col-md-6'>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, id: :blog_title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, id: :blog_title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <label class='btn btn-primary btn-block'>
      Upload Main Image <%= form.file_field :image, style: 'display:none;' %>  
      </label>
    </div>
    <div class="form-group">
      <label class='btn btn-primary btn-block'>
      Upload Thumb Image <%= form.file_field :thumb_image, style: 'display:none;' %>  
      </label>
    </div>

  </div>
  <div class='col-md-6'>
    <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body, class: 'form-control', rows:10 %>
    </div>
  </div>
  <div class='col-md-12'>
    <h3> Technologies Used </h3>
    <div>
      <%= form.fields_for :technologies do |technology_form| %> 
      <%= render 'technology_fields', f: technology_form %>
      <% end %>
    </div>
    <div>
      <%= link_to_add_association 'Add Technology', form, :technologies %>
    </div>
  </div>
</div>




<div class="actions form-group">
  <%= form.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
</div>
<% end %>
