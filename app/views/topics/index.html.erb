<div class="col-sm-8 blog-main">
<p id="notice"><%= notice %></p>

<h1>Topics</h1>
<div class="row"> 
  <div class='col-md-4'></div>
  <div class='col-md-4'></div>
  <div class='col-md-4'><%= link_to 'New Topic', new_topic_path, class: 'btn btn-primary block' %></div>
</div>
</div>
<div class='row'>
  <% @topics.each do |topic| %>
    <div class='col-md-4'>
      <div class='topics'>
        <div class='card'>
          <div class='topic-title'><%= topic.title%></div>
          <div class=''>
            <%if logged_in?(:site_admin) %>
               <%= link_to 'Edit', edit_topic_path(topic), class: 'btn btn-warning' %> <%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

